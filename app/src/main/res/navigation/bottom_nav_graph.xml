<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_holder"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.recipestorepro.presentation.fragments.recipes.HomePageFragment"
        android:label="HomePageFragment"
        tools:layout="@layout/fragment_home_page">
        <action
            android:id="@+id/action_homePageFragment_to_createNewRecipeFragment"
            app:destination="@id/createNewRecipeFragment" />
    </fragment>

    <fragment
        android:id="@+id/toBuyListFragment"
        android:name="com.example.recipestorepro.presentation.fragments.recipes.ToBuyListFragment"
        android:label="ToBuyListFragment"
        tools:layout="@layout/fragment_tobuy_list" />

    <dialog
        android:id="@+id/addNewRecipeFragment"
        android:name="com.example.recipestorepro.presentation.fragments.recipes.AddNewRecipeDialog"
        android:label="AddNewRecipeFragment"
        tools:layout="@layout/dialog_add_new_repice">
        <action
            android:id="@+id/action_addNewRecipeFragment_to_createNewRecipeFragment"
            app:destination="@id/createNewRecipeFragment" />
    </dialog>

    <fragment
        android:id="@+id/timerFragment"
        android:name="com.example.recipestorepro.presentation.fragments.recipes.TimerFragment"
        android:label="TimerFragment"
        tools:layout="@layout/fragment_timer" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.recipestorepro.presentation.fragments.account.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/createNewRecipeFragment"
        android:name="com.example.recipestorepro.presentation.fragments.recipes.CreateNewRecipeFragment"
        android:label="CreateNewRecipeFragment"
        tools:layout="@layout/fragment_create_new_recipe">
        <argument
            android:name="recipe"
            android:defaultValue="@null"
            app:argType="com.example.recipestorepro.domain.models.LocalRecipe"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.recipestorepro.presentation.fragments.account.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.recipestorepro.presentation.fragments.account.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signUpFragment_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.recipestorepro.presentation.fragments.account.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_homePageFragment"
            app:destination="@id/homePageFragment" />
    </fragment>
</navigation>